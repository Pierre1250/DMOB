<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/list_nomPro"
        android:layout_width="@dimen/lar"
        android:layout_height="@dimen/haut"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_prix_pro"
        app:layout_constraintTop_toBottomOf="@+id/list_image_pro" />

    <TextView
        android:id="@+id/list_prix_pro"
        android:layout_width="@dimen/lar"
        android:layout_height="@dimen/haut"

        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_image_pro" />

    <TextView
        android:id="@+id/type_pro_li"
        android:layout_width="@dimen/lar"
        android:layout_height="@dimen/haut"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_prix_pro" />

    <ImageView
        android:id="@+id/list_image_pro"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        tools:srcCompat="@drawable/preview" />

    <Button
        android:id="@+id/btnpan"
        android:layout_width="150dp"
        android:layout_height="@dimen/haut"
        android:layout_marginTop="32dp"
        android:background="#CDDC39"
        android:text="@string/commander"
        android:textColor="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/type_pro_li"
        app:layout_constraintTop_toBottomOf="@+id/list_nomPro"
        android:onClick="commander"/>


</androidx.constraintlayout.widget.ConstraintLayout>