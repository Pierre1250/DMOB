<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajouterproduit">


    <EditText
        android:id="@+id/produit"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="@dimen/longueurTview"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/nomPro"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_pro"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/prix"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="@dimen/longueurTview"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/prix"
        android:inputType="number|textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produit"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btnchoix"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="@dimen/hauteurbouton"
        android:text="@string/choisir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prix"
        app:layout_constraintVertical_bias="0.060000002" />

    <ImageView
        android:id="@+id/imv"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnchoix"
        app:layout_constraintVertical_bias="0.19999999"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="@dimen/hauteurbouton"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv" />

    <EditText
        android:id="@+id/type_pro"
        android:layout_width="@dimen/largeurTview"
        android:layout_height="42dp"
        android:layout_marginTop="128dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Type du produit"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>